{
    "name": "codewars-js",
    "description": "Codewars solutions in js",
    "license": "MIT",
    "main": "index.js",
    "scripts": {
        "test": "jest",
        "coverage": "jest --coverage",
        "lint": "eslint \"./*_kyu/**/*.{ts,js}\"",
        "lint:fix": "eslint --fix \"./*kyu/**/*.{ts,js}\"",
        "format": "prettier --write \"./*_kyu/**/*.{js,jsx,ts,tsx,json,css,scss,md}\" --ignore-path ./.prettierignore",
        "count": "ts-node ./count.ts",
        "prepare": "husky"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    },
    "lint-staged": {
        "*.{css,scss}": "npm run stylelint:fix",
        "*.{js,jsx,ts,tsx}": "npm run lint",
        "*.{js,jsx,ts,tsx,json,css,scss,md}": "npm run format"
    },
    "devDependencies": {
        "@types/jest": "^29.5.11",
        "babel-eslint": "^10.0.3",
        "babel-loader": "^8.1.0",
        "eslint": "^5.16.0",
        "eslint-plugin-import": "^2.18.2",
        "husky": "^9.0.11",
        "jest": "^29.7.0",
        "prettier": "^3.2.5",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.3"
    }
}
